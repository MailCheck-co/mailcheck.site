{
  "name": "~TODO~",
  "version": "0.0.1",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "format:code": "prettier --check --plugin-search-dir=. . ",
    "verify:code": "svelte-check --output=human",
    "lint:scripts": "eslint --ignore-path .gitignore . -f node_modules/eslint-html-reporter/reporter.js -o report.html",
    "lint:style": "stylelint \"src/**/*.+(scss|css|svelte)\"",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore . && svelte-check",
    "lint:css": "stylelint \"src/**/*.+(scss|css|svelte)\" --fix",
    "format": "prettier --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@nodeart/stylelint-config-nodeart": "^0.0.4",
    "@sveltejs/adapter-static": "next",
    "@sveltejs/kit": "next",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "autoprefixer": "^10.2.6",
    "cssnano": "^5.0.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-html-reporter": "^0.7.4",
    "eslint-plugin-svelte3": "^3.2.0",
    "firebase-tools": "^9.12.1",
    "gray-matter": "^4.0.3",
    "license-checker": "^25.0.1",
    "mdsvex": "^0.9.6",
    "npm-audit-html": "^1.4.1",
    "pngquant-bin": "^6.0.0",
    "postcss": "^8.3.0",
    "postcss-load-config": "^3.0.1",
    "prettier": "^2.3.0",
    "prettier-plugin-svelte": "^2.3.0",
    "rehype-autolink-headings": "^5.1.0",
    "rehype-slug": "^4.0.1",
    "remark-abbr": "^1.4.1",
    "remark-github": "^10.1.0",
    "sass": "^1.34.1",
    "simple-git-hooks": "^2.4.1",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "svelte": "^3.38.2",
    "svelte-check": "^2.1.0",
    "svelte-preprocess": "^4.7.3",
    "svgo": "^2.3.0",
    "tslib": "^2.2.0",
    "typescript": "^4.3.2"
  },
  "type": "module",
  "dependencies": {
    "@fontsource/fira-mono": "^4.2.2",
    "@lukeed/uuid": "^2.0.0",
    "cookie": "^0.4.1"
  },
  "stylelint": {
    "extends": [
      "@nodeart/stylelint-config-nodeart",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "src/scss/libs/*.+(scss|css)"
    ],
    "rules": {
      "no-descending-specificity": null,
      "plugin/no-low-performance-animation-properties": null,
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global"
          ]
        }
      ]
    }
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format && npm run lint:css"
  }
}
